@model TeaShop.Models.ViewModels.RegisterVM

<h2>Zarejestruj się</h2>
<form method="post" asp-action="Register" asp-controller="Account">
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <div class="form-group row mb-2">
        <label class="col-md-2" asp-for="Name"></label>
        <div class=" col-md-5">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-md-2" asp-for="Surname"></label>
        <div class=" col-md-5">
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-md-2" asp-for="Email"></label>
        <div class=" col-md-5">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-md-2" asp-for="Password"></label>
        <div class=" col-md-5">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-md-2" asp-for="ConfirmPassword"></label>
        <div class=" col-md-5">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group mt-5">
        <div class="form-group">
            <div class="col-md-10 offset-md-2">
                <input type="submit" value="Rejestracja" class="btn btn-success" />
                <div class="btn btn-info" style="margin-left:30px;">
                    <a asp-action="Login" style="text-decoration:none;color:white;">Zaloguj się</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}