@model IEnumerable<Order>
@{
    ViewData["Title"] = "GetUserCart";
}
<h3>Moje Zamówienia</h3>

<div style="width:90%;margin:auto" class="mt-2">
    @if (Model != null && Model.Count()>0)
    {
        
        <table class="table table-striped">
            <tr>
                <th>Data zamówienia</th>
                <th>Status zamówienia</th>
                <th></th>
            </tr>
            @foreach( var order in Model)
            {
                <tr>
                    <td>@order.CreateDate.ToString("dd-MM-yyyy")</td>
                    <td>@order.OrderStatus.StatusName</td>
                
                
                </tr>
                @if (order.OrderDetail != null && order.OrderDetail.Count > 0)
                {


                    <tr>
                        
                        <td>
                            <table class="table table-striped">
                                <tr>
                                    <td>
                                        Suma:
                                    </td>
                                    <td>
                                        @(order.OrderDetail.Select(item => item.Product.Price * item.Quantity).Sum())
                                    </td>
                                </tr>
                                <tr>
                                    <th>Product</th>
                                    <th>Image</th>
                                    <th>Category</th>
                                    <th>Unit Price(INR)</th>
                                    <th>Total Price</th>
                                    <th>Action</th>
                                </tr>
                                @foreach (var item in order.OrderDetail)
                                {
                                    
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td>
                                            @if (item.Product.PhotoId == 0)
                                            {
                                                <img src="/images/NoImage.png" style="width:100px;height:100px" />
                                            }
                                            else
                                            {
                                                <img src="@Url.Content("~/images/"+item.ProductId+".jpg")" style="width:80px;height:100px" />
                                            }
                                        </td>
                                        <td>@item.Product.Category.CategoryName</td>
                                        <td>@item.Product.Price X @item.Quantity</td>
                                        <td>@(item.Product.Price * item.Quantity)</td>

                                    </tr>
                                    
                                }
                            </table>
                        </td>
                    
                    </tr>
                }

                
            }
        </table>



    }
    
    else
    {
        <h5>Brak zamówień</h5>
    }
</div>
